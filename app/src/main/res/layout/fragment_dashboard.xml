<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lazytomatostudios.svceinterrupt.navbarfragments.Dashboard"
    android:background="#f8f8f8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:onClick="openMap"
                app:cardBackgroundColor="@color/accent"
                app:cardCornerRadius="20dp"
                app:cardElevation="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="SVCE Map"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:text="Events"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/accent"
                android:text="View All"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:onClick="openEvent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card1" />

            <HorizontalScrollView
                android:id="@+id/event_scroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_text">

                <LinearLayout
                    android:id="@+id/event_scroll_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/event1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/accent"
                            android:src="@drawable/ic_event_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Battle Code"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/event2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/accent"
                            android:src="@drawable/ic_event_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Connect Four!"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/event3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/accent"
                            android:src="@drawable/ic_event_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mind Your\nBusiness v3.0"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/event4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/accent"
                            android:src="@drawable/ic_event_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Breaking the\nLogician\'s Code"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/event5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/accent"
                            android:src="@drawable/ic_event_black_24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Presentation\nPark"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/register_button"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/accent"
                android:text="register"
                android:textSize="15dp"
                android:onClick="openRegister"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_scroll" />

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:onClick="openTransport"
                app:cardBackgroundColor="@color/accent"
                app:cardCornerRadius="32dp"
                app:cardElevation="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="20dp"
                        android:text="Transport"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:onClick="openInstruction"
                app:cardBackgroundColor="@color/accent"
                app:cardCornerRadius="32dp"
                app:cardElevation="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="Instructions"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>
